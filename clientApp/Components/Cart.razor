@code {
    [Parameter] public List<CartItem> CartItems { get; set; } = new();
    [Parameter] public EventCallback<(int, int)> OnUpdateQuantity { get; set; }

    decimal Total => CartItems.Sum(x => x.Product.Price * x.Quantity);
}

@foreach (var item in CartItems)
{
    <div style="border: 1px solid black; margin-bottom: 10px;">
        <div>@item.Product.Name</div>
        <div>CENA: @item.Product.Price zł</div>
        <div>
            Ilość: 
            <button @onclick="@(() => OnUpdateQuantity.InvokeAsync((item.Product.Id, -1)))">-</button>
            @item.Quantity
            <button @onclick="@(() => OnUpdateQuantity.InvokeAsync((item.Product.Id, 1)))">+</button>
        </div>
    </div>
}

<hr />
<h3>SUMA: @Total zł</h3>
<button style="background: red; color: white; font-weight: bold;">ZAMÓW</button>